@model WebDocuments.Models.UserModel

@{
    ViewBag.Title = "LoginUsuario";
}

<h2>LoginUsuario</h2>

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    if (@ViewBag.Message != null)
    {
        <div style="border:1px solid red">
            @ViewBag.Message
        </div>
    }

    <table>
        <tr>
            <td>@Html.LabelFor(a => a.cod_usuario)</td>
            <td>@Html.TextBoxFor(a => a.cod_usuario)</td>
            <td>@Html.ValidationMessageFor(a => a.cod_usuario)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(a => a.pass_usuario)</td>
            <td>@Html.PasswordFor(a => a.pass_usuario)</td>
            <td>@Html.ValidationMessageFor(a => a.pass_usuario)</td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Login" />
            </td>
            <td></td>
        </tr>
    </table>
}

@section Scripts
    {
    @Scripts.Render("~/bundles/jqueryval")
}

